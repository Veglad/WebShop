<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="@dimen/nav_main_header_height"
        android:background="@drawable/form_screen_background"

        android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="32sp"
            android:gravity="center"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/navMainHeaderEmail"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp"/>
    <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/nav_header_gradient_shape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
            android:id="@+id/navLoadAvatarImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_photo_camera_white_24dp"
            android:background="@color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/navMainHeaderEmail"
            app:layout_constraintBottom_toBottomOf="@+id/navMainHeaderEmail"/>
    <TextView
            android:id="@+id/navMainHeaderEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="some@example.com"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/navLoadAvatarImageButton"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"/>
</android.support.constraint.ConstraintLayout>