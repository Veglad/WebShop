<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/orderLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/form_screen_background">
    <android.support.v7.widget.Toolbar
            android:id="@+id/orderActionBar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="40dp"
            android:paddingEnd="40dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/ordering"
                android:textColor="@color/primary"
                android:textSize="42sp"
                android:layout_marginEnd="8dp"
                android:id="@+id/orderTextView"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/nameTextInput"/>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="@color/white"
                android:layout_height="wrap_content"
                android:id="@+id/nameTextInput"
                android:layout_marginTop="32dp"
                android:theme="@style/TextInputLabel"
                app:errorTextAppearance="@style/TextInputLabelErrorState"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/orderTextView"
                app:layout_constraintBottom_toTopOf="@id/lastNameTextInput"
                app:layout_constraintStart_toStartOf="parent">
            <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/orderName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/white"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="@color/white"
                android:layout_height="wrap_content"
                android:id="@+id/lastNameTextInput"
                android:theme="@style/TextInputLabel"
                app:errorTextAppearance="@style/TextInputLabelErrorState"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/nameTextInput"
                app:layout_constraintBottom_toTopOf="@id/cardNumberTextInput"
                app:layout_constraintStart_toStartOf="parent">
            <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/orderLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/last_name"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/white"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="@color/white"
                android:layout_height="wrap_content"
                android:theme="@style/TextInputLabel"
                app:errorTextAppearance="@style/TextInputLabelErrorState"
                app:errorEnabled="true"
                app:layout_constraintTop_toBottomOf="@+id/lastNameTextInput"
                app:layout_constraintBottom_toTopOf="@id/cardMonthTextInput"
                app:layout_constraintStart_toStartOf="parent"
                android:nextFocusForward="@id/cardMonthTextInput"
                android:id="@+id/cardNumberTextInput">
            <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/orderCardNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/card_number"
                    android:inputType="numberSigned"
                    android:textColor="@android:color/white"
                    android:maxLength="20"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:textColorHint="@color/white"
                android:layout_height="wrap_content"
                android:theme="@style/TextInputLabel"
                app:errorTextAppearance="@style/TextInputLabelErrorState"
                app:errorEnabled="true"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardNumberTextInput"
                app:layout_constraintBottom_toTopOf="@id/orderPriceTitle"
                android:id="@+id/cardMonthTextInput"
                android:nextFocusForward="@id/cardYearTextInput"
                app:layout_constraintEnd_toStartOf="@+id/monthYearSeparator">
            <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/orderCardMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/month"
                    android:inputType="numberSigned"
                    android:textColor="@android:color/white"
                    android:imeOptions="actionNext"
                    android:maxLength="2"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="@string/month_year_separator"
                app:layout_constraintStart_toEndOf="@+id/cardMonthTextInput"
                android:id="@+id/monthYearSeparator"
                app:layout_constraintEnd_toStartOf="@+id/cardYearTextInput"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="@+id/cardMonthTextInput"/>
        <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:textColorHint="@color/white"
                android:layout_height="wrap_content"
                android:theme="@style/TextInputLabel"
                app:errorTextAppearance="@style/TextInputLabelErrorState"
                app:errorEnabled="true"
                app:layout_constraintTop_toTopOf="@+id/cardMonthTextInput"
                app:layout_constraintStart_toEndOf="@+id/monthYearSeparator"
                android:id="@+id/cardYearTextInput"
                android:nextFocusForward="@id/cardCvTextInput"
                app:layout_constraintEnd_toStartOf="@+id/cardCvTextInput">
            <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/orderCardYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/year"
                    android:inputType="numberSigned"
                    android:textColor="@android:color/white"
                    android:imeOptions="actionNext"
                    android:maxLength="2"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:textColorHint="@color/white"
                android:layout_height="wrap_content"
                android:theme="@style/TextInputLabel"
                app:errorTextAppearance="@style/TextInputLabelErrorState"
                app:errorEnabled="true"
                app:layout_constraintTop_toTopOf="@+id/cardMonthTextInput"
                app:layout_constraintStart_toEndOf="@+id/cardYearTextInput"
                android:layout_marginStart="24dp"
                android:id="@+id/cardCvTextInput"
                app:layout_constraintEnd_toEndOf="parent">
            <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/orderCardCV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/cv"
                    android:inputType="numberPassword"
                    android:textColorHint="@color/white"
                    android:maxLength="3"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/order_price"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/orderPriceTitle"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@+id/orderTotalPrice"
                app:layout_constraintTop_toBottomOf="@+id/cardMonthTextInput"
                app:layout_constraintBottom_toTopOf="@id/buttonOrder"/>
        <TextView
                android:id="@+id/orderTotalPrice"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/orderPriceTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/orderPriceTitle"/>
        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:id="@+id/buttonOrder"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/order"
                android:layout_marginTop="32dp"
                app:spinning_bar_color="@color/white"
                app:spinning_bar_padding="6dp"
                app:spinning_bar_width="4dp"
                style="@style/ButtonPrimaryStyle"
                android:foreground="?selectableItemBackground"
                android:background="@drawable/login_button_drawable"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/orderPriceTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
        </br.com.simplepass.loading_button_lib.customViews.CircularProgressButton>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>