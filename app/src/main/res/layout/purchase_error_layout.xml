<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="@string/no_order_error_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/purchaseErrorLayoutMessage"
            android:textSize="20sp"
            android:maxLines="2"
            android:gravity="center"
            android:textColor="@color/dark_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/textView"/>
    <TextView
            android:text="@string/no_orders_error_message"
            android:layout_width="250dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/purchaseErrorLayoutMessage"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/purchaseErrorLayoutButton" android:layout_marginTop="8dp"
    />
    <Button
            android:text="@string/back_to_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/purchaseErrorLayoutButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="32dp"/>
</android.support.constraint.ConstraintLayout>