<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="8dp"
        android:layout_marginBottom="0dp"
        app:cardCornerRadius="@dimen/primary_corner_radius"
        android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

        <ImageView
                android:id="@+id/goodsImage"
                android:layout_width="180dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/goodsTitle"
                tools:text="IPhone X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textFontWeight="700"
                android:textSize="18sp"
                android:textColor="@color/primary_dark"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/goodsImage"
                android:layout_marginStart="8dp"/>
        <TextView
                android:id="@+id/goodsDescription"
                tools:text="Some short description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/goodsTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/goodsImage"

                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buyButton"
                android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.0"/>
        <Button
                android:id="@+id/buyButton"
                android:text="@string/buy"
                style="@style/buttonPrimaryStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
        />
        <TextView
                android:id="@+id/goodsPrice"
                tools:text="1099"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/buyButton"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/goodsImage"
                android:textColor="@color/primary"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/buyButton" app:layout_constraintBottom_toBottomOf="@+id/buyButton"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>